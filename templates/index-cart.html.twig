{% extends 'base.html.twig' %}

{% block title %}Категории{% endblock %}

{% block body %}
<div class="container">

    <h1>Все товары</h1>

    <div class="row">

        {% for category in categories %}

           <h2>{{ category.name }}</h2>

            {% for products in category.products %}

                <div class="col-md-3">
                    <div class="card h-100">

                        <img data-src="holder.js/216x180" class="card-img-top" alt="216x180" style="width: 100%; height: 180px;" src="data:image/svg+xml;base64," data-holder-rendered="true">

                        <div class="card-header">
                            <h5 class="card-title">{{ products.name }}</h5>
                        </div>



                        <div class="card-body">

                            <p class="card-text">{{ products.description }}</p>
                            <p>{{ products.price }} руб.</p>
                            <a href="#" class="btn btn-primary">В корзину</a>
                        </div>


                    </div>
                </div>

            {% endfor %}

        {% else %}



            <div class="alert alert-danger" role="alert">
                Отсутствуют товары!
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

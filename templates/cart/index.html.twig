{% extends 'base.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Корзина</h1>
        <div class="card">
            <table class="table table-hover shopping-cart-wrap">
                <thead class="text-muted">
                <tr>
                    <th scope="col">Товар</th>
                    <th scope="col" width="120">Количество</th>
                    <th scope="col" width="120">Цена</th>
                    <th scope="col" width="200" class="text-right">Действия</th>
                </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                <figure class="media">
                                    <div class="img-wrap"><img src="/images/piza1.png" class="img-thumbnail img-sm"></div>
                                    <figcaption class="media-body">
                                        <h6 class="title text-truncate">{{ product.data.name }} </h6>
                                        {% for groupKey,options in product.options %}
                                            {{ groupKey }}:
                                            {% for option in options %}
                                                {{ option.name }}
                                            {% endfor %}
                                            <br />
                                        {% endfor %}
                                    </figcaption>
                                </figure>
                            </td>
                            <td>
                                {{ product.amount }}
                            </td>
                            <td>
                                <div class="price-wrap">
                                    <var class="price">{{ product.data.price }} Р</var>
                                </div> <!-- price-wrap .// -->
                            </td>
                            <td class="text-right">
                                <a href="#" class="btn btn-outline-danger remove-product" data-id="{{ product.id }}"> × удалить</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Корзина пуста</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% if products|length %}
                <button class="btn btn-outline-danger create-order">Оформить заказ</button>
            {% endif %}
        </div>
    </div>
{% endblock %}
